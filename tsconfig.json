{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@statics/*": ["statics/*"],
      "@themes/*": ["themes/*"]
    }
  },
  "exclude": ["dist", "node_modules", "src/**/*.test.tsx"]
}
